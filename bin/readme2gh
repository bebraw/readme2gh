#!/usr/bin/env node
var ioscript = require('ioscript.js');
var marked = require('marked');

ioscript({
    version: '0.1.0',
    args: process.argv,
    inputExtension: 'tpl',
    outputExtension: 'html',
    transform: function(data) {
        var html = 'html goes here'; // TODO: fetch this

        return data.replace(/\{\{ content \}\}/, html);
    }
});
